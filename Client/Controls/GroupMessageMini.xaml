<UserControl x:Class="Client.Controls.GroupMessageMini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Controls"
             mc:Ignorable="d"
              HorizontalAlignment="Stretch"
             Margin="0,2,2,2"
             VerticalAlignment="Top">
    <Grid HorizontalAlignment="Stretch" >
        <Grid.Effect>
            <DropShadowEffect BlurRadius="20" Direction="-45" RenderingBias="Quality" ShadowDepth="3" Opacity="0.6"/>
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Background="Beige" FontSize="14" Name="UserName" VerticalContentAlignment="Center" ></Label>
        <Border Grid.Column="1" Background="Beige" CornerRadius="0 , 5, 5, 0" HorizontalAlignment="Stretch" >
            <Border  Background="#FFDEDEBF" Margin="2" CornerRadius="0, 5, 5, 0" HorizontalAlignment="Stretch"  >
                <Label  FontSize="14" Name="Teext" Margin="2" VerticalContentAlignment="Center" ></Label>
            </Border>
            
        </Border>
    </Grid>
</UserControl>
